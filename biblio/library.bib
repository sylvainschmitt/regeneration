doi = {10.1111/eva.13082},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Alexandre et al.{\_}2020{\_}How does contemporary selection shape oak phenotypes.pdf:pdf},
issn = {17524571},
journal = {Evolutionary Applications},
keywords = {Quercus petraea,Quercus robur,fitness,second theorem of selection,selection gradients},
