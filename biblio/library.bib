isbn = {0022-0477},
issn = {00220477},
journal = {Journal of ecology},
keywords = {Community null model,Determinants of plant community diversity and stru,Flood meadow,Gradient analysis,Habitat filtering,Niche differentiation,Plant functional trait,Species coexistence,Trait plasticity},
month = {jul},
number = {5},
pages = {1134--1140},
pmid = {3297},
publisher = {Blackwell Publishing Ltd},
title = {{Intraspecific variability and trait-based community assembly}},
