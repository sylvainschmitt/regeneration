doi = {10.1111/2041-210X.12889},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Okamoto, Amarasekare{\_}2018{\_}A framework for high-throughput eco-evolutionary simulations integrating multilocus forward-time population ge.pdf:pdf},
