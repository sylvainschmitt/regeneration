journal = {Methods in Ecology and Evolution},
keywords = {Mixed-effects models,Nonlinear regression,R language,Relative growth rate},
month = {apr},
number = {2},
pages = {245--256},
title = {{How to fit nonlinear plant growth models and calculate growth rates: an update for ecologists}},
url = {http://doi.wiley.com/10.1111/j.2041-210X.2011.00155.x},
