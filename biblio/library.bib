title = {{Intraspecific Variation and Species Coexistence}},
url = {https://people.clas.ufl.edu/jlichstein/files/Lichstein{\_}et{\_}al{\_}2007{\_}Am{\_}Nat{\_}with{\_}appendices.pdf http://www.journals.uchicago.edu/doi/10.1086/522937},
