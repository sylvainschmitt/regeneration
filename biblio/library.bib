journal = {Oikos},
month = {may},
number = {5},
pages = {720--727},
publisher = {Blackwell Publishing Ltd},
title = {{Functional traits of individual trees reveal ecological constraints on community assembly in tropical rain forests}},
url = {http://doi.wiley.com/10.1111/j.1600-0706.2010.19110.x},
volume = {120},
year = {2011}
}
@article{Mason2013a,
abstract = {The leaf economics spectrum (LES) describes large cross-species variation in suites of leaf functional traits ranging from resource-acquisitive to resource-conservative strategies. Such strategies have been integral in explaining plant adaptation to diverse environments, and have been linked to numerous ecosystem processes. The LES has previously been found to be significantly modulated by climate, soil fertility, biogeography, growth form, and life history. One largely unexplored aspect of LES variation, whole-plant ontogeny, is investigated here using multiple populations of three very different species of sunflower: Helianthus annuus, Helianthus mollis, and Helianthus radula. Plants were grown under environmentally controlled conditions and assessed for LES and related traits at four key developmental stages, using recently matured leaves to standardize for leaf age. Nearly every trait exhibited a significant ontogenetic shift in one or more species, with trait patterns differing among populations and species. Photosynthetic rate, leaf nitrogen concentration, and leaf mass per area exhibited surprisingly large changes, spanning over two-thirds of the original cross-species LES variation and shifting from resource-acquisitive to resource-conservative strategies as the plants matured. Other traits being investigated in relation to the LES, such as leaf water content, pH, and vein density, also showed large changes. The finding that ontogenetic variation in LES strategy can be substantial leads to a recommendation of standardization by developmental stage when assessing 'species values' of labile traits for comparative approaches. Additionally, the substantial ontogenetic trait shifts seen within single individuals provide an opportunity to uncover the contribution of gene regulatory changes to variation in LES traits. {\textcopyright} 2013 The Author.},
author = {Mason, Chase M. and McGaughey, Sarah E. and Donovan, Lisa A.},
doi = {10.1093/jxb/ert249},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Mason, McGaughey, Donovan{\_}2013{\_}Ontogeny strongly and differentially alters leaf economic and other key traits in three diverse Helianthu.pdf:pdf},
issn = {00220957},
journal = {Journal of Experimental Botany},
keywords = {Helianthus,LMA,leaf economics,leaf lifespan,leaf nitrogen,ontogeny,pH,photosynthesis,sunflower,vein density.},
number = {13},
pages = {4089--4099},
title = {{Ontogeny strongly and differentially alters leaf economic and other key traits in three diverse Helianthus species}},
volume = {64},
year = {2013}
}
