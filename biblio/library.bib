doi = {10.1371/journal.pbio.3000191},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Wang et al.{\_}2019{\_}The architecture of intra-organism mutation rate variation in plants.pdf:pdf},
isbn = {1111111111},
issn = {15457885},
