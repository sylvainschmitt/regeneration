isbn = {0012-9615},
issn = {00129615},
journal = {Ecological Monographs},
keywords = {California,Jasper Ridge Biological Preserve,USA,california,community assembly,environment,environmental gradient,habitat filtering,jasper ridge biological preserve,limiting similarity,plant functional,plant functional traits,species,trait relationship,usa},
