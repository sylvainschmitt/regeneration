doi = {10.1016/S0304-3800(01)00476-8},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Port{\'{e}}, Bartelink{\_}2002{\_}Modelling mixed forest growth A review of models for forest management.pdf:pdf},
