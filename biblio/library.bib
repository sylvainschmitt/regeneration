issn = {1365294X},
journal = {Molecular Ecology},
keywords = {biogeography,forest ecology,historical demography,neotropics},
number = {4},
pages = {1161--1174},
pmid = {27926985},
title = {{Tropical rainforests that persisted: inferences from the Quaternary demographic history of eight tree species in the Guiana shield}},
volume = {26},
year = {2017}
}
