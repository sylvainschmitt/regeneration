file = {:home/sylvain/Documents/Bibliography/Mendeley/Biswas et al.{\_}2016{\_}A conceptual framework for the spatial analysis of functional trait diversity.pdf:pdf},
isbn = {1600-0706},
issn = {16000706},
journal = {Oikos},
number = {2},
pages = {192--200},
title = {{A conceptual framework for the spatial analysis of functional trait diversity}},
volume = {125},
year = {2016}
}
