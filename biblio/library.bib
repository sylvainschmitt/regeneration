isbn = {2045-7758},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Dipterocarpaceae,Functional traits,Light,Nonlinear growth,Plant development and life-history traits,SGR,Survival,Tropical lowland forest,Wood density},
month = {sep},
