isbn = {2041-210X},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Biodiversity,Bird assemblages,Diversity partitioning,Hill numbers,Large-scale monitoring,Phylogenetic entropy,Shannon entropy,Turn-over,$\beta$-diversity},
