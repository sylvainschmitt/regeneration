file = {:home/sylvain/Documents/Bibliography/Mendeley/N'Guessan et al.{\_}2019{\_}Drivers of biomass recovery in a secondary forested landscape of West Africa.pdf:pdf},
issn = {03781127},
journal = {Forest Ecology and Management},
