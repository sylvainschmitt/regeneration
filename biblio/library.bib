doi = {10.1073/pnas.94.25.13730},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Reich, Walters, Ellsworth{\_}1997{\_}From tropics to tundra Global convergence in plant functioning.pdf:pdf},
