file = {:home/sylvain/Documents/Bibliography/Mendeley/Nautiyal, Rachaputi, Joshi{\_}2002{\_}Moisture-deficit-induced changes in leaf-water content, leaf carbon exchange rate and biomass production.pdf:pdf},
