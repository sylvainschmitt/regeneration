doi = {10.3389/fpls.2020.00053},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Yang et al.{\_}2020{\_}Large Underestimation of Intraspecific Trait Variation and Its Improvements.pdf:pdf},
issn = {1664462X},
journal = {Frontiers in Plant Science},
keywords = {CV estimator,Tiantong,bias,coefficient of variation,individual variation,trait variability},
number = {February},
pages = {1--9},
title = {{Large Underestimation of Intraspecific Trait Variation and Its Improvements}},
