issn = {2197-5620},
journal = {Forest Ecosystems},
keywords = {Ecology,Ecosystems,Forestry},
month = {dec},
number = {1},
pages = {2},
title = {{Key drivers of ecosystem recovery after disturbance in a neotropical forest}},
