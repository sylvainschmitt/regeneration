doi = {10.1186/s13021-016-0056-7},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Piponiot et al.{\_}2016{\_}A methodological framework to assess the carbon balance of tropical managed forests.pdf:pdf},
issn = {17500680},
journal = {Carbon Balance and Management},
keywords = {Amazonia,Carbon cycle,Error propagation,Production forests,Selective logging},
month = {dec},
number = {1},
pages = {15},
publisher = {BioMed Central},
title = {{A methodological framework to assess the carbon balance of tropical managed forests}},
url = {https://cbmjournal.biomedcentral.com/articles/10.1186/s13021-016-0056-7},
volume = {11},
