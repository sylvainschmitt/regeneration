keywords = {Capreolous capreolus,RAD-sequencing,animal model,genomic relatedness matrix,pedigree-free quantitative genetics},
month = {jun},
pages = {1755--0998.13031},
publisher = {John Wiley {\&} Sons, Ltd (10.1111)},
title = {{RAD-sequencing for estimating genomic relatedness matrix-based heritability in the wild: A case study in roe deer}},
