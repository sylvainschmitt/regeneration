journal = {Global Ecology and Biogeography},
keywords = {Biodiversity and ecosystem functioning,Boreal forests,Canada,Ecosystem services,Fertility gradient,Forest biomes,Functional diversity,Phylogenetic diversity,Temperate forests,Tree productivity},
