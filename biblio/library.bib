file = {:home/sylvain/Documents/Bibliography/Mendeley/Baltzer et al.{\_}2005{\_}Edaphic specialization in tropical trees Physiological correlates and responses to reciprocal transplantation.pdf:pdf},
isbn = {0012-9658},
issn = {00129658},
journal = {Ecology},
keywords = {Acclimation,Borneo,Edaphic association,Multiple resource interactions,Nitrogen-use efficiency,Photosynthesis,Reciprocal transplant experiment,Tropical rain forest,Water-use efficiency},
