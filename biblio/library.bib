file = {:home/sylvain/Documents/Bibliography/Mendeley/R{\'{e}}jou-M{\'{e}}chain, Cheptou{\_}2015{\_}High incidence of dioecy in young successional tropical forests.html:html},
issn = {1365-2745},
journal = {Journal of Ecology},
keywords = {Baker's law,community assembly,community composition,determinants of plant community diversity and str,forest succession,functional traits,sexual system,tropical forest},
number = {3},
pages = {725--732},
title = {{High incidence of dioecy in young successional tropical forests}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/1365-2745.12393/abstract},
