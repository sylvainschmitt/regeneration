issn = {00029122},
journal = {American Journal of Botany},
keywords = {Adult wood,Demographic rates,Fibers,Growth-Mortality tradeoff,Ontogeny,Sapling wood,Variation partitioning,Vessels,Wood anatomy},
month = {oct},
number = {10},
pages = {1464--1473},
publisher = {Botanical Society of America},
title = {{Linking wood traits to vital rates in tropical rainforest trees: Insights from comparing sapling and adult wood}},
