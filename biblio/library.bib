doi = {10.1111/j.1600-0587.2010.06904.x},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Lep{\v{s}} et al.{\_}2011{\_}Community trait response to environment Disentangling species turnover vs intraspecific trait variability effects.pdf:pdf},
isbn = {1600-0587},
issn = {09067590},
journal = {Ecography},
month = {oct},
number = {5},
pages = {856--863},
publisher = {Blackwell Publishing Ltd},
title = {{Community trait response to environment: Disentangling species turnover vs intraspecific trait variability effects}},
url = {http://doi.wiley.com/10.1111/j.1600-0587.2010.06904.x},
