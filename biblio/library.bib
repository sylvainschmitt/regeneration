doi = {10.1111/j.1558-5646.1997.tb01458.x},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Moore, Brodie, Wolf{\_}1997{\_}INTERACTING PHENOTYPES AND THE EVOLUTIONARY PROCESS I. DIRECT AND INDIRECT GENETIC EFFECTS OF SOCIAL INTERACTIO.pdf:pdf},
