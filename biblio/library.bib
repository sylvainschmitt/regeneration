journal = {Genetics},
keywords = {Admixture,Complex traits,GWAS,Polygenic adaptation,Selection},
month = {apr},
number = {4},
pages = {1565--1584},
pmid = {29348143},
publisher = {Genetics},
title = {{Detecting Polygenic Adaptation in Admixture Graphs}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/29348143 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5887149 http://www.genetics.org/lookup/doi/10.1534/genetics.117.300489},
