title = {{Spacing Dynamics of a Tropical Rain Forest Tree: Evaluation of the Janzen-Connell Model}},
url = {https://www.journals.uchicago.edu/doi/10.1086/284316 http://www.journals.uchicago.edu/doi/10.1086/284316},
volume = {124},
