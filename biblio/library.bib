doi = {10.1111/1365-2435.12388},
file = {:home/sylvain/Documents/Bibliography/Mendeley/M{\"{u}}nkem{\"{u}}ller et al.{\_}2015{\_}Phylogenetic niche conservatism - common pitfalls and ways forward.pdf:pdf},
issn = {13652435},
journal = {Functional Ecology},
keywords = {Brownian motion,Macroevolutionary model,Neutral drift,Niche lability,Ornstein-Uhlenbeck,Rates of evolution},
