file = {:home/sylvain/Documents/Bibliography/Mendeley/Holliday{\_}2006{\_}Neanderthals and modern humans an example of a mammalian syngameon.pdf:pdf},
issn = {18779077},
journal = {Vertebrate Paleobiology and Paleoanthropology},
keywords = {Divergence times,Hybridization,Modern human origins,Species concepts},
number = {9781402051203},
pages = {281--297},
title = {{Neanderthals and modern humans: an example of a mammalian syngameon?}},
year = {2006}
}
