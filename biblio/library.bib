file = {:home/sylvain/Documents/Bibliography/Mendeley/Binelli et al.{\_}2020{\_}Discrepancies between genetic and ecological divergence patterns suggest a complex biogeographic history in a Neotro.pdf:pdf},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Amazon,Guiana Shield,Myristicaceae,Virola,allopatric divergence,interspecific gene flow,secondary contact},
number = {11},
