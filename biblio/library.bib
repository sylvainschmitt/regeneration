doi = {10.1111/1365-2435.13945},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Kannenberg et al.{\_}2021{\_}Opportunities, challenges and pitfalls in characterizing plant water‐use strategies.pdf:pdf},
issn = {0269-8463},
journal = {Functional Ecology},
