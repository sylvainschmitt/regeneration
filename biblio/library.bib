doi = {10.1111/2041-210X.12777},
editor = {Stinchcombe, John},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Wadgymar et al.{\_}2017{\_}Identifying targets and agents of selection innovative methods to evaluate the processes that contribute to local a.pdf:pdf},
