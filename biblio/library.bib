issn = {19326203},
journal = {PLoS ONE},
month = {jun},
number = {6},
pages = {e11123},
publisher = {Public Library of Science},
title = {{Variation within and between closely related species uncovers high intra-specific variability in dispersal}},
url = {http://dx.plos.org/10.1371/journal.pone.0011123},
