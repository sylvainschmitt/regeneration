doi = {10.1002/ece3.6731},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Tysklind et al.{\_}2020{\_}Microgeographic local adaptation and ecotype distributions The role of selective processes on early life-history tr.pdf:pdf},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Neotropical forest,Symphonia,determinants of plant community diversity and stru,evolutionary ecology,landscape ecology,local adaptation,plant development and life-history traits,reciprocal transplantation experiments},
number = {19},
pages = {10735--10753},
title = {{Microgeographic local adaptation and ecotype distributions: The role of selective processes on early life-history traits in sympatric, ecologically divergent Symphonia populations}},
