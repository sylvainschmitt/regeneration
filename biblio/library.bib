isbn = {1466-8238},
issn = {14668238},
journal = {Global Ecology and Biogeography},
keywords = {Beta diversity,Central Africa,Community diversity and structure,Forest succession,Functional traits,Trait-based approach},
number = {12},
pages = {1440--1449},
title = {{Tropical tree assembly depends on the interactions between successional and soil filtering processes}},
