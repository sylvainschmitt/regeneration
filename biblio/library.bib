keywords = {approximate Bayesian computation,demographic inferences,genome scan,intrinsic and ecological barriers,reproductive isolation,speciation},
title = {{Massive postglacial gene flow between European white oaks uncovered genes underlying species barriers}},
year = {2019}
}
