pmid = {15212095},
title = {{Fingerprinting the impacts of global change on tropical forests}},
url = {http://rstb.royalsocietypublishing.org/content/359/1443/437.short http://www.jstor.org/stable/4142193},
volume = {359},
year = {2004}
