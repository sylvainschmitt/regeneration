issn = {00129615},
journal = {Ecological Monographs},
keywords = {California,Community assembly,Environment-species-trait relationship,Environmental gradient,Habitat filtering,Jasper Ridge Biological Preserve,Limiting similarity,Plant functional traits.,USA},
month = {feb},
number = {1},
pages = {109--126},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Community assembly and shifts in plant trait distributions across an environmental gradient in coastal California}},
