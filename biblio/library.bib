file = {:home/sylvain/Documents/Bibliography/Mendeley/Dez{\'{e}}cache et al.{\_}2017{\_}Moving forward socio-economically focused models of deforestation.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
keywords = {Guiana shield,REDD+,demography,scenarios,spatially explicit modelling,subsidies},
number = {9},
pages = {3484--3500},
pmid = {28055134},
title = {{Moving forward socio-economically focused models of deforestation}},
volume = {23},
year = {2017}
}
@article{Alexandre2020,
