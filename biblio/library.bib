file = {:home/sylvain/Documents/Bibliography/Mendeley/Chi et al.{\_}2015{\_}Effects of size, neighbors, and site condition on tree growth in a subtropical evergreen and deciduous broad-leaved mixe.pdf:pdf;:home/sylvain/Documents/Bibliography/Mendeley/Chi et al.{\_}2015{\_}Effects of size, neighbors, and site condition on tree growth in a subtropical evergreen and deciduous broad-leaved mix.html:html},
issn = {2045-7758},
