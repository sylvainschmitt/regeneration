journal = {BMC Bioinformatics},
keywords = {Algorithms,Bioinformatics,Computational Biology/Bioinformatics,Computer Appl. in Life Sciences,Genomics,Hybridisation,Introgression,Microarrays,SNPs},
month = {dec},
number = {1},
pages = {207},
publisher = {BioMed Central},
title = {{Estimates of introgression as a function of pairwise distances}},
