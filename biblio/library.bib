file = {:home/sylvain/Documents/Bibliography/Mendeley/BARRs, WEATHERLEy{\_}1962{\_}A RE-EXAMINATION OF THE RELATIVE TURGIDITY TECHNIQUE FOR ESTIMATING WATER DEFICITS IN LEAVES By H. D. BARRs and P.pdf:pdf},
journal = {Aust.J.Biol.Sci},
