editor = {Lavorel, Sandra},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Butterfield, Suding{\_}2013{\_}Single-trait functional indices outperform multi-trait indices in linking environmental gradients and ecosystem.pdf:pdf},
