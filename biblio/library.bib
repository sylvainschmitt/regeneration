journal = {Evolution},
keywords = {-Evolutionary rates,extended phenotypes,phenotypic evolution,quantitative genetics,social behavior},
month = {oct},
number = {5},
pages = {1352--1362},
title = {{INTERACTING PHENOTYPES AND THE EVOLUTIONARY PROCESS: I. DIRECT AND INDIRECT GENETIC EFFECTS OF SOCIAL INTERACTIONS}},
